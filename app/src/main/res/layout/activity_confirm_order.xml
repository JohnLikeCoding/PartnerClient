<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_80"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_22"
            android:textStyle="bold"
            tools:text="专车-现在"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_25"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_22"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="今天14:00"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_12"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"
            tools:text="实时订单，距离1.6公里"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_55"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/confirm_order_tip"
            android:textColor="@color/color_ff4a26"
            android:textSize="@dimen/font_16"/>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <TextView
            android:id="@+id/start_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_50"
            android:layout_marginTop="@dimen/space_25"
            android:drawableLeft="@drawable/green_point"
            android:drawablePadding="@dimen/space_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_18"
            tools:text="起始地"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <View
            android:layout_width="@dimen/space_5"
            android:layout_height="@dimen/space_5"
            android:layout_marginLeft="105px"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/gray_point"/>

        <TextView
            android:id="@+id/end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_25"
            android:layout_marginLeft="@dimen/space_50"
            android:drawableLeft="@drawable/red_point"
            android:drawablePadding="@dimen/space_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_18"
            tools:text="目的地"/>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_25"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">

        <Button
            android:id="@+id/confirm_order_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/conner_green_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_18"
            tools:text="立即接单(32s)"/>

        <Button
            android:id="@+id/cancel_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@drawable/conner_green_stroke_bg"
            android:paddingLeft="@dimen/space_17"
            android:paddingRight="@dimen/space_17"
            android:textColor="@color/color_1bb671"
            android:textSize="@dimen/font_18"
            android:text="无法接单"/>

    </LinearLayout>

</RelativeLayout>