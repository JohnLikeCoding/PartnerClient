<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_top_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_70"
        android:layout_marginTop="@dimen/space_55"
        android:src="@drawable/logo1"/>

    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16"/>

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_15"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/phone_hint"
            android:maxLength="11"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_808080"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16"/>

        <EditText
            android:id="@+id/code_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/code_hint"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_808080"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/code_get_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="@string/code_get"
            android:textColor="@color/color_1bb671"
            android:textSize="@dimen/font_14"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_25"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_100"
        android:background="@drawable/conner_green_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_f4f4f4"
        android:textSize="@dimen/font_16"/>

</LinearLayout>