<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/space_15"
              android:paddingRight="@dimen/space_15">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/space_15"
        android:paddingTop="@dimen/space_8"
        android:src="@drawable/down"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_8"
        android:text="@string/today_performance"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_18"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_17"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/dd"
            android:drawablePadding="@dimen/space_10"
            android:text="今日完成订单"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/complete_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"
            tools:text="5/9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_17"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sc"
            android:drawablePadding="@dimen/space_10"
            android:text="累计工作时长"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/total_work_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"
            tools:text="5/9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_17"
        android:layout_marginTop="@dimen/space_17"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/gf"
            android:drawablePadding="@dimen/space_10"
            android:text="高峰时段在线时长"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/peak_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/font_16"
            tools:text="5/9"/>

    </LinearLayout>

    <View style="@style/horizontal_line"/>

    <Button
        android:id="@+id/off_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_17"
        android:layout_marginTop="@dimen/space_17"
        android:background="@drawable/conner_green_bg"
        android:text="收车"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_16"/>

</LinearLayout>