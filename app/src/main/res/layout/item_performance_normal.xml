<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conner_white_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_15"
        android:paddingRight="@dimen/space_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_16"
                tools:text="专车-预约"/>

            <TextView
                android:id="@+id/order_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_1bb671"
                android:textSize="@dimen/font_16"
                tools:text="进行中"/>

        </LinearLayout>

        <View style="@style/horizontal_line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:background="@drawable/time1"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/font_16"
                tools:text="2018-10-11"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:background="@drawable/green_point"/>

            <TextView
                android:id="@+id/start_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/font_16"
                tools:text="起始点"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_15"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_10"
                android:layout_height="@dimen/space_10"
                android:background="@drawable/red_point"/>

            <TextView
                android:id="@+id/end_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/font_16"
                tools:text="目的地"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/order_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/order_tip_tv"
        android:layout_alignRight="@+id/order_tip_tv"
        android:textColor="@color/color_1bb671"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"
        tools:text="¥18.00"/>

    <TextView
        android:id="@+id/order_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_content_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_2"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/font_14"
        tools:text="未按时接单，扣款¥3.00"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:layout_below="@+id/order_content_ll"/>

</RelativeLayout>