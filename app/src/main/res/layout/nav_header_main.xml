<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_160"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.kuaigui.yueche.driver.widget.CircleImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/space_65"
        android:layout_height="@dimen/space_65"
        android:background="@drawable/tx"
        app:layout_auto_basewidth="height"/>

    <TextView
        android:id="@+id/driver_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/space_10"
        android:textSize="@dimen/font_24"
        android:textStyle="bold"
        tools:text="123456"/>

</LinearLayout>
